
@using Zimbra.Social.SitecoreSDK.Samples.MVC.Models
@model Zimbra.Social.SitecoreSDK.Samples.MVC.Models.CommentModel

@if (Model != null)
{
  
    <div class="comments">
        <h3>Comments</h3>
       
        <ul class="comment-list list-unstyled">
            @foreach (var comment in Model.Comments)
            {
                <li class="comment-list-item">
                    <div class="comment-header ">
                        <ul class="meta list-inline">
                            <li class="author">@comment.User.DisplayName</li>
                            <li class="post-date">@DateTime.Parse(comment.CreatedDate).ToString("f")</li>
                        </ul>
                    </div>
                   
                     <p> @Html.Raw(comment.Body)</p>
                </li>
            }
        </ul>
    </div>
}

